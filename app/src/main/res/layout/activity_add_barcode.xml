<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.AddBarcodeActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:id="@+id/activity_add_barcode_header"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:background="@drawable/gradient_bg"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white"
                android:text="Product Barcode" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:orientation="horizontal" >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/activity_add_barcode_scan_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                app:cardBackgroundColor="#f4f4f6"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/activity_add_barcode_scanAgain"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:padding="10dp"
                                    android:textSize="20sp"
                                    android:background="@drawable/button_bg"
                                    android:layout_weight="1"
                                    android:textColor="@android:color/white"
                                    android:text="Scan Again" />
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>
                       <FrameLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginTop="15dp"
                           android:layout_marginRight="2dp"
                           android:background="@android:color/transparent"
                           android:layout_weight="1">
                           <androidx.cardview.widget.CardView
                               android:id="@+id/activity_add_barcode_add_barcode_card"
                               android:layout_width="match_parent"
                               android:textAlignment="center"
                               app:cardElevation="25dp"
                               app:cardBackgroundColor="@android:color/transparent"
                               android:layout_height="match_parent" >
                               <TextView
                                   android:id="@+id/activity_add_barcode_addBarcode"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textAlignment="center"
                                   android:padding="10dp"
                                   android:textSize="20sp"
                                   android:background="@drawable/white_button_bg"
                                   android:layout_weight="1"
                                   android:textColor="#ffeb707a"
                                   android:text="Add Product" />
                           </androidx.cardview.widget.CardView>
                       </FrameLayout>
                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginVertical="50dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/activity_add_barcode_card"
        android:layout_below="@+id/activity_add_barcode_header"
        android:layout_above="@+id/activity_add_barcode_button">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/activity_add_barcode_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_scanner"/>
            <EditText
                android:layout_below="@+id/activity_add_barcode_icon"
                android:id="@+id/activity_add_barcode_editTextBarcode"
                android:layout_width="match_parent"
                android:editable="false"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/img_barcode_fields"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_below="@+id/activity_add_barcode_editTextBarcode"
                android:id="@+id/activity_add_barcode_editTextName"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:hint="Enter Product Name"
                android:textAlignment="center"
                android:textStyle="italic"
                android:background="@drawable/img_barcode_fields"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/activity_add_barcode_barcode"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_add_barcode_editTextName"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_barcode" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <!--<TextView
        android:text="Product Barcode"
        android:id="@+id/activity_add_barcode_textViewBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/activity_add_barcode_editTextBarcode"
        android:id="@+id/activity_add_barcode_textViewName"
        android:text="Product Name - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="add"
        android:layout_below="@id/activity_add_barcode_editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Scan Again"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_add_barcode_addBarcode"

        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
    <Button
        android:text="Add My Product"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/tap_btn_layer1"
        android:elevation="0dp"
        android:textColor="@android:color/white"
        android:id="@+id/activity_add_barcode_button"
        android:layout_marginHorizontal="100dp"
        android:layout_height="50dp"/>
</RelativeLayout>