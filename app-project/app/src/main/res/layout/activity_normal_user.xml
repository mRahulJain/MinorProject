<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ImpairedUserActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"></TextView>
    <ImageButton
        android:id="@+id/activity_normal_user-cameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/normal_user_btn"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp"
        android:elevation="8dp"
        android:src="@drawable/ic_baseline_photo_camera_24"></ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/activity_normal_user-weatherBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:tooltipText="Hey"
                android:background="@drawable/normal_user_btn"
                android:elevation="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_weather"></ImageButton>
            <ImageButton
                android:id="@+id/activity_normal_user-newsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/normal_user_btn"
                android:padding="20dp"
                android:tooltipText="Hey"
                android:elevation="8dp"
                android:src="@drawable/ic_news"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/activity_normal_user-readBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/normal_user_btn"
                android:padding="20dp"
                android:tooltipText="Hey"
                android:elevation="8dp"
                android:src="@drawable/ic_reading"></ImageButton>
            <ImageButton
                android:id="@+id/activity_normal_user-barcodeScanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/normal_user_btn"
                android:tooltipText="Hey"
                android:elevation="8dp"
                android:src="@drawable/ic_barcode"></ImageButton>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/activity_normal_user-backBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:padding="15dp"
            android:background="@drawable/tap_btn"
            android:layout_margin="15dp"
            android:src="@drawable/ic_circular_left_arrow"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textSize="15sp"
            android:text="Go Back"></TextView>
    </LinearLayout>
</LinearLayout>
